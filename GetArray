GetArray=LAMBDA(BasePoint,ColCount,[LimitRowCount],[ColOffset],[RowOffset],LET(BaseAddress,CELL("address",BasePoint),ColNum,COLUMN(BasePoint),RowNum,ROW(BasePoint),PathPostion,IFERROR(FIND("!",BaseAddress),0),PathName,LEFT(BaseAddress,PathPostion),FirstPoint,CONCAT("R",RowNum+RowOffset,"C",ColNum),LastPoint,IF(LimitRowCount=0,CONCAT("R","1048576","C",ColNum),CONCAT("R",LimitRowCount,"C",ColNum)),AccordingCol,INDIRECT(CONCAT(PathName,FirstPoint,":",LastPoint),0),RowCount,COUNTA(AccordingCol),OFFSET(BasePoint,RowOffset,ColOffset,RowCount,ColCount)))
